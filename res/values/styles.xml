<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- Layout -->
    <style name="Window.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Window.SlidePoints" parent="AppTheme">
        <item name="background">@drawable/background_layout_slide_points</item>
    </style>

    <style name="Window.SlidePointsGreen" parent="AppTheme">
        <item name="background">@drawable/background_layout_slide_points_green</item>
    </style>

    <!-- Spinner -->
    <style name="Spinner" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="background">@drawable/background_text_input</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text Input Edit Text -->
    <style name="TextInputEditText.Border" parent="Widget.Design.TextInputLayout">
        <item name="background">@drawable/background_text_input</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <!-- Button -->
    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="background">@drawable/background_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <!-- Text -->
    <style name="TextView.Title.Border" parent="Base.TextAppearance.AppCompat.Title">
        <item name="background">@drawable/background_title_bar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">7dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextView.Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextView.DarkBlue" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">32sp</item>
        <item name="android:padding">8dp</item>
        <item name="background">@drawable/background_title_dark_blue</item>
    </style>

    <style name="TextView.Text.Big.Translucid" parent="Base.TextAppearance.AppCompat.Title">
        <item name="background">@color/white_translucid</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">7dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextView.Text.Big.White" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">25sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Text.Big.White.Number" parent="TextView.Text.Big.White">
        <item name="android:textSize">45sp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>